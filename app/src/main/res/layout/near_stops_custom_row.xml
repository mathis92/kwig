<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:elevation="10dp"
    android:translationZ="10dp"
    android:id="@+id/near_stops_custom_row">

    <ImageView
        android:id="@+id/near_stops_custom_row_stop_icon"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/stop_icon2"
        android:layout_marginLeft="16dp"
        android:elevation="15dp"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/near_stops_custom_row_stop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:elevation="15dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="ZASTAFKA"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        />
    <include
        android:id="@+id/stop_custom_row0"
        layout="@layout/stop_details_custom_row"/>
    <include
        android:id="@+id/stop_custom_row1"
        layout="@layout/stop_details_custom_row"/>
    <include
        android:id="@+id/stop_custom_row2"
        layout="@layout/stop_details_custom_row"/>

</LinearLayout>